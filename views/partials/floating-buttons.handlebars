<div class="floating-button" onclick="fullScreen()">
    <i class="nf nf-fa-expand"></i>
</div>
<div class="floating-button floating-two" onclick="refresh()">
    <i class="nf nf-fa-refresh"></i>
</div>
<div class="floating-button floating-three">
    {{> battery}}
</div>

<script>
    const elem = window.parent.document.documentElement;
	const parentDoc = window.parent.document;
	let isFullscreen = false;
    function fullScreen() {
		if(isFullscreen) {
			if (parentDoc.exitFullscreen) {
				parentDoc.exitFullscreen();
            } else if (parentDoc.webkitExitFullscreen) {
                parentDoc.webkitExitFullscreen();
            } else if(parentDoc.webkitCancelFullscreen) {
                parentDoc.webkitCancelFullscreen();
            } else if (parentDoc.mozCancelFullScreen) {
                parentDoc.mozCancelFullScreen();
            } else if (parentDoc.msExitFullscreen) {
                parentDoc.msExitFullscreen();
            } else if (parentDoc.cancelFullScreen) {
                parentDoc.cancelFullScreen();
            } else if (parentDoc.oCancelFullScreen) {
                parentDoc.oCancelFullScreen();
            }
        } else {
			if(elem.requestFullscreen) {
                elem.requestFullscreen();
            } else if (elem.webkitRequestFullscreen) {
                elem.webkitRequestFullscreen();
            } else if (elem.mozRequestFullScreen) {
                elem.mozRequestFullScreen();
            } else if (elem.msRequestFullscreen) {
                elem.msRequestFullscreen();
            }
        }
        isFullscreen = !isFullscreen;
    }
	function refresh() {
        document.location.href = document.location.href;
    }
</script>